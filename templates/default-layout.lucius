
#message {
    margin-bottom: 1rem;
}

#message-wrapper {
    margin-top: 8rem;
}

/* Navbar */

nav {
    background-color: white;
    min-height: 4rem;
}

/* Main Content */

.bottom-right {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    z-index: 100;
}

/* Footer */

footer {
    padding: 0.8rem;
    margin-top: 1rem;
}

footer p {
    font-size: 0.8rem;
    margin: 0;
}

/* General */

.lg-checkbox {
    display: block;
    width: 1.5rem;
    height: 1.5rem;
}